<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CheckScam - Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css"> <!-- Giả định có file style.css từ gr1/static -->
</head>
<body>
    <header class="bg-dark text-white p-3">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-4">
                    <a href="@Url.Action("Index", "AdminDashboard")" class="text-white text-decoration-none">
                        <h4>CheckScam Admin</h4>
                    </a>
                </div>
                <div class="col-md-8 text-end">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <span class="me-3">🔓 Đăng xuất (@User.Identity.Name)</span>
                        <a href="@Url.Action("Logout", "Gr1")" class="btn btn-outline-light btn-sm">Đăng xuất</a>
                    }
                </div>
            </div>
        </div>
    </header>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-3">
                <div class="list-group">
                    <a href="@Url.Action("Index", "AdminDashboard")" class="list-group-item list-group-item-action">
                        📋 Bài tố cáo chưa duyệt
                    </a>
                    <a href="#" class="list-group-item list-group-item-action disabled">
                        🕖 Lịch sử các bài tố cáo
                    </a>
                </div>
            </div>
            <div class="col-md-9">
                @RenderBody() <!-- Placeholder cho nội dung View -->
            </div>
        </div>
    </div>

    <footer class="bg-light text-center py-3 mt-5">
        <p>© 2025 - Website lọc thông tin lừa đảo</p>
        <p>Đại học Tài Nguyên và Môi Trường Hồ Chí Minh - 11_CNTT2</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>