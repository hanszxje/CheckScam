<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CheckScam Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .navbar {
            background-color: #222;
            padding: 10px;
        }

        .navbar-brand, .nav-link {
            color: white !important;
        }

        .navbar-nav .nav-link {
            margin-left: 15px;
        }

        footer {
            background-color: #f8f9fa;
            padding: 10px 0;
            text-align: center;
            position: fixed;
            width: 100%;
            bottom: 0;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">CheckScam</a>
                <div class="d-flex ms-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <form asp-action="Logout" asp-controller="Gr1" method="post" class="d-inline">
                            <input type="hidden" name="_RequestVerificationToken" value="@Html.AntiForgeryToken()" />
                            <a class="nav-link" href="@Url.Action("Index", "AdminDashboard")">📋 Bài tố cáo chưa duyệt</a>
                            <button type="submit" class="nav-link btn btn-link text-white">🔓 Đăng xuất (@User.Identity.Name)</button>
                        </form>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid body-content">
        @RenderBody()
    </div>

    <footer>
        <p>© 2025 - Website lọc thông tin lừa đảo</p>
        <p>Đại học Tài Nguyên và Môi Trường Hồ Chí Minh - 11_CNTT2</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>